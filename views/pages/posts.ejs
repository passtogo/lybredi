<main>
  <%- include('../layout/partials/sidenav') %>
  <section id="posts">
    <% if (posts.length > 0) { %> <% for (let post of posts) { %>
    <article>
      <h3><%= post.title %></h3>
      <small>Author: <%= post.username %></small><br />
      <small><%= post.date %></small>
      <p><%= post.body %></p>
      <a href="posts/<%= post.uuid %> "><small>Want more resources?</small></a>
    </article>
    <% } %> <% } %>
  </section>
</main>
